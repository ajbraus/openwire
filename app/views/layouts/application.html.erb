<!DOCTYPE html>
<html>
<head>
  <title>Openwire</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

	<% if user_signed_in? %>
		<%= render 'layouts/header' %>
	<% else %>
		<%= render 'layouts/landing_header' %>
	<% end %>

	<% if flash %>
		<%= render 'layouts/notice' %>
	<% end %>

	<%= yield %>

</body>
</html>
